{
  "manifest_version": 3,
  "name": "Lumina Position Sizer",
  "version": "1.6.4",
  "description": "Floating position size calculator for TradingView.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://luminarisk.netlify.app/*",
    "https://somwlhgzpesijlibvpwz.supabase.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lumina Launchpad"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "extension_entry.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}